<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="<%= page.description || page.excerpt || config.description %>">
    <meta name="keywords" content="<%= page.keywords || config.keywords %>">
    <meta name="author" content="<%= config.author %>">
    
    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="<%= page.title ? page.title + ' - ' + config.SEOTitle : config.SEOTitle %>">
    <meta property="og:description" content="<%= page.description || page.excerpt || config.description %>">
    <meta property="og:type" content="<%= page.og_type || (page.layout === 'post' ? (config.og_type || 'article') : 'website') %>">
    <meta property="og:url" content="<%= full_url_for(page.path) %>">
    <meta property="og:site_name" content="<%= config.SEOTitle %>">
    <meta property="og:locale" content="<%= config.language %>">
    
    <!-- Open Graph Image -->
    <% 
    var isLargeImage = config.twitter_card === 'summary_large_image' || page.og_large_image;
    var imageWidth = isLargeImage ? (config.og_large_image_width || 1200) : (config.og_image_width || 400);
    var imageHeight = isLargeImage ? (config.og_large_image_height || 630) : (config.og_image_height || 400);
    %>
    <% if (page.cover || page.thumbnail) { %>
    <meta property="og:image" content="<%= full_url_for(page.cover || page.thumbnail) %>">
    <meta property="og:image:width" content="<%= imageWidth %>">
    <meta property="og:image:height" content="<%= imageHeight %>">
    <% } else { %>
    <meta property="og:image" content="<%= full_url_for(config.site_image) %>">
    <meta property="og:image:width" content="<%= imageWidth %>">
    <meta property="og:image:height" content="<%= imageHeight %>">
    <% } %>
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="<%= page.twitter_card || config.twitter_card || 'summary' %>">
    <meta name="twitter:title" content="<%= page.title ? page.title + ' - ' + config.SEOTitle : config.SEOTitle %>">
    <meta name="twitter:description" content="<%= page.description || page.excerpt || config.description %>">
    <% if (page.cover || page.thumbnail) { %>
    <meta name="twitter:image" content="<%= full_url_for(page.cover || page.thumbnail) %>">
    <% } else { %>
    <meta name="twitter:image" content="<%= full_url_for(config.site_image) %>">
    <% } %>
    <% if (config.twitter_username) { %>
    <meta name="twitter:creator" content="@<%= config.twitter_username %>">
    <meta name="twitter:site" content="@<%= config.twitter_username %>">
    <% } %>
    
    <!-- Article specific meta tags -->
    <% if (page.layout === 'post') { %>
    <meta property="article:published_time" content="<%= page.date.toISOString() %>">
    <% if (page.updated) { %>
    <meta property="article:modified_time" content="<%= page.updated.toISOString() %>">
    <% } %>
    <meta property="article:author" content="<%= config.author %>">
    <% if (page.categories && page.categories.length > 0) { %>
    <meta property="article:section" content="<%= page.categories.data[0].name %>">
    <% } %>
    <% if (page.tags && page.tags.length > 0) { %>
    <% page.tags.data.forEach(function(tag) { %>
    <meta property="article:tag" content="<%= tag.name %>">
    <% }); %>
    <% } %>
    <% } %>
    
    <link rel="shortcut icon" href="<%= config.root %>img/favicon.ico">

    <title>
        <% if (page.title) { %>
        <%= page.title + ' - ' + config.SEOTitle %>
        <% } else{%>
        <%= config.SEOTitle %>
        <% } %>
    </title>

    <!-- Custom CSS -->
    <%- css('css/aircloud.css') %>
    <%- css('css/gitment.css') %>
    <%- css('css/right-sidebar.css') %>
    <%- css('css/claude-code-style.css') %>
    <%- css('css/compact-style.css') %>
    <%- css('css/layout-fix.css') %>
    <%- css('css/comment-width-fix.css') %>
    <%- css('css/social-icons.css') %>
    <%- css('css/scrollbar-fix.css') %>
    <!--<link rel="stylesheet" href="https://imsun.github.io/gitment/style/default.css">-->
    <link href="//at.alicdn.com/t/font_620856_28hi1hpxx24.css" rel="stylesheet" type="text/css">
    <!-- ga & ba script hoook -->
    <script></script>

    <%- partial('_partial/analytics', null, {cache: false}) %>
</head>
